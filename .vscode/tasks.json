{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "inputs": [
        {
            "id": "pluginName",
            "type": "command",
            "command": "extension.commandVariable",
        }
    ],
    "tasks": [
        {
            "label": "BuildCopy",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build",
                "copyFile"
            ],
            "group": {
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "close": true
            }
        },
        {
            "label": "BuildCopyShadowJar",
            "dependsOrder": "sequence",
            "dependsOn": [
                "buildShadowJar",
                "copyFileShadowJar"
            ],
            "group": {
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "close": true
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": ".\\gradlew build",
            "group": "none",
            "presentation": {
                "close": true
            }
        },
        {
            "label": "buildShadowJar",
            "type": "shell",
            "command": ".\\gradlew shadowJar",
            "group": "none",
            "presentation": {
                "close": true
            }
        },
        {
            "label": "copyFile",
            "type": "shell",
            "group": "none",
            "command": "cp ${workspaceFolder}/app/build/libs/${config:pluginName}-${config:pluginVersion}.jar ${config:serverPluginPath}",
            "presentation": {
                "close": true
            }
        },
        {
            "label": "copyFileShadowJar",
            "type": "shell",
            "group": "none",
            "command": "cp ${workspaceFolder}/app/build/libs/${config:pluginNameShadowJar}-${config:pluginVersion}.jar ${config:serverPluginPath}",
            "presentation": {
                "close": true
            }
        },
    ]
  }
  